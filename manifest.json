{
	"update_url":"http://clients2.google.com/service/update2/crx",
	"name": "Map Helper",
	"version": "1.2",
	"default_locale": "en",
	"manifest_version": 2,
	"description": "Просмотр альтернативных карт на страницах Google Maps, Яндекс Карты и тд",
	"homepage_url": "https://bestmaps.ru/chrome_extension",
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Map Helper",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
    },
    "background": {
		"scripts": ["bg.js"]
	},
	"permissions": [ "tabs", "http://*/*", "https://*/*", "storage" ],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content_script.js"],
			"css": ["css/content.css"]
		}
	],
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
        "content.css",
        "img/cross.svg"
    ]
}